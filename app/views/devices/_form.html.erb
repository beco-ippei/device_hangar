    <%= f.label :classify %><br>
    <%= f.text_field :classify %>
  </div>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :carrier %><br>
    <%= f.text_field :carrier %>
  </div>
  <div class="field">
    <%= f.label :sim %><br>
    <%= f.check_box :sim %>
  </div>
  <div class="field">
    <%= f.label :os %><br>
    <%= f.text_field :os %>
  </div>
  <div class="field">
    <%= f.label :version %><br>
    <%= f.text_field :version %>
  </div>
  <div class="field">
    <%= f.label :telephone_number %><br>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="field">
    <%= f.label :passcode %><br>
    <%= f.text_field :passcode %>
  </div>
  <div class="field">
    <%= f.label :emails %><br>
    <%= f.text_field :emails %>
  </div>
  <div class="actions">
